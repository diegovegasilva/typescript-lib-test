{
    "name": "typescript-lib-test",
    "version": "1.0.0",
    "description": "Example of TypeScript library setup for multiple compilation targets using tsc and webpack",
    "main": "index.js",
    "repository": "https://github.com/diegovegasilva/typescript-lib-test",
    "author": "Diego Vega",
    "license": "MIT",
    "scripts": {
        "clean": "shx rm -rf _bundles lib lib-esm",
        "build": "npm run clean && tsc && tsc -m es6 --outDir lib-esm && webpack"
    },
    "dependencies": {
        "typescript": "^3.2.2",
        "uglifyjs-webpack-plugin": "^2.1.2"
    },
    "devDependencies": {
        "shx": "^0.2.2",
        "ts-loader": "^5.3.3",
        "webpack": "^4.28.4",
        "webpack-cli": "^3.2.1",
        "webpack-dev-server": "^3.1.14",
        "rxjs": "^6.3.3"
    },
    "peerDependencies": {
        "rxjs": "^6.3.3"
    }
}
